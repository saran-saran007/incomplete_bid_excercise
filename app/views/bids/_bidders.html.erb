<b> Bidder's List </b>
<% @post.bids.each do |bid| %>
 <br>
   <div style="float: left; width: auto;">
     <%= bid.user.email %><br>
   </div>
   <% unless @post.bid_winner_id %>
      <%= button_to "Offer Bid", offer_bid_post_bid_path(@post, bid),
          :action => "offer_bid", :method => :post %>
   <% end %>
<% end %>
